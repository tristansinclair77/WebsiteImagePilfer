<Window x:Class="WebsiteImagePilfer.SettingsWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebsiteImagePilfer"
  mc:Ignorable="d"
        Title="Settings" Height="450" Width="450" MinHeight="400" MinWidth="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    <Grid Margin="{StaticResource PaddingLarge}">
        <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
         <RowDefinition Height="Auto"/>
   </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
      Style="{StaticResource HeaderText}"
   Text="Download Settings"
         Margin="{StaticResource SectionMarginBottom}"/>
    
      <!-- Add ScrollViewer to make content scrollable -->
     <ScrollViewer Grid.Row="1" 
    VerticalScrollBarVisibility="Auto"
        Margin="{StaticResource MarginBottomLarge}">
            <StackPanel>
             <!-- Filter by Size -->
      <GroupBox Header="Image Filtering" Style="{StaticResource StandardGroupBox}">
   <StackPanel Margin="{StaticResource PaddingStandard}">
  <CheckBox x:Name="FilterBySizeCheckBox" 
Style="{StaticResource SimpleCheckBox}"
  Content="Filter images by minimum size"
     Margin="{StaticResource MarginBottomStandard}"/>
       
      <Grid IsEnabled="{Binding ElementName=FilterBySizeCheckBox, Path=IsChecked}">
     <Grid.ColumnDefinitions>
     <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
           <ColumnDefinition Width="Auto"/>
           </Grid.ColumnDefinitions>
   
            <TextBlock Grid.Column="0" 
    Style="{StaticResource LabelText}"
     Text="Minimum size:"/>
    
   <Slider x:Name="MinSizeSlider"
         Grid.Column="1"
         Style="{StaticResource StandardSlider}"
             Minimum="1000"
        Maximum="100000"
              TickFrequency="1000"
   IsSnapToTickEnabled="True"
 Value="5000"/>
            
<TextBlock Grid.Column="2" 
    Text="{Binding ElementName=MinSizeSlider, Path=Value, StringFormat={}{0:N0} bytes}"
  VerticalAlignment="Center"
   Margin="{StaticResource MarginRightStandard}"
      Width="80"/>
           </Grid>
            </StackPanel>
   </GroupBox>
         
       <!-- Display Options -->
<GroupBox Header="Display Options" Style="{StaticResource StandardGroupBox}">
      <StackPanel Margin="{StaticResource PaddingStandard}">
         <CheckBox x:Name="ShowThumbnailsCheckBox" 
      Style="{StaticResource SimpleCheckBox}"
        Content="Show thumbnail previews in list"/>
   <CheckBox x:Name="LoadPreviewsCheckBox" 
          Style="{StaticResource SimpleCheckBox}"
             Content="Load preview images during scan"/>
        <TextBlock Style="{StaticResource HelpText}"
   Text="When enabled: Downloads small previews during scan so you can see images before downloading"/>
      </StackPanel>
       </GroupBox>
        
         <!-- File Type Filters -->
            <GroupBox Header="File Type Filters (Optional)" Style="{StaticResource StandardGroupBox}">
            <StackPanel Margin="{StaticResource PaddingStandard}">
     <CheckBox x:Name="FilterJpgCheckBox" 
     Style="{StaticResource SimpleCheckBox}"
     Content="JPG/JPEG"/>
       <CheckBox x:Name="FilterPngCheckBox" 
      Style="{StaticResource SimpleCheckBox}"
 Content="PNG"/>
     <CheckBox x:Name="FilterGifCheckBox" 
      Style="{StaticResource SimpleCheckBox}"
 Content="GIF"/>
     <CheckBox x:Name="FilterWebpCheckBox" 
      Style="{StaticResource SimpleCheckBox}"
 Content="WEBP"/>
          <TextBlock Style="{StaticResource HelpText}"
          Text="Check file types to allow. If none are checked, all image types will be downloaded."/>
                </StackPanel>
        </GroupBox>
         
           <!-- Full Resolution Options -->
    <GroupBox Header="Full Resolution Detection" Style="{StaticResource StandardGroupBox}">
          <StackPanel Margin="{StaticResource PaddingStandard}">
    <CheckBox x:Name="SkipFullResCheckBox" 
   Style="{StaticResource SimpleCheckBox}"
         Content="Skip full-resolution check (faster, download previews only)"/>
     <TextBlock Style="{StaticResource HelpText}"
                Text="When unchecked: App will try to find and download full-resolution images instead of previews/thumbnails"/>
    </StackPanel>
    </GroupBox>
  
    <!-- Scan Limit Options -->
          <GroupBox Header="Scan Limit" Style="{StaticResource StandardGroupBox}">
         <StackPanel Margin="{StaticResource PaddingStandard}">
 <CheckBox x:Name="LimitScanCheckBox" 
  Style="{StaticResource SimpleCheckBox}"
Content="Limit number of images to scan"
        Margin="{StaticResource MarginBottomStandard}"/>
     
    <Grid IsEnabled="{Binding ElementName=LimitScanCheckBox, Path=IsChecked}">
 <Grid.ColumnDefinitions>
     <ColumnDefinition Width="Auto"/>
       <ColumnDefinition Width="*"/>
              <ColumnDefinition Width="Auto"/>
   </Grid.ColumnDefinitions>
   
     <TextBlock Grid.Column="0" 
  Style="{StaticResource LabelText}"
               Text="Maximum images:"/>
  
  <Slider x:Name="MaxImagesSlider"
      Grid.Column="1"
           Style="{StaticResource StandardSlider}"
     Minimum="5"
     Maximum="200"
  TickFrequency="5"
    IsSnapToTickEnabled="True"
          Value="20"/>
         
    <TextBlock Grid.Column="2" 
 Text="{Binding ElementName=MaxImagesSlider, Path=Value, StringFormat={}{0:N0} images}"
     VerticalAlignment="Center"
Margin="{StaticResource MarginRightStandard}"
   Width="80"/>
</Grid>
              
<TextBlock Style="{StaticResource HelpText}"
      Margin="{StaticResource MarginTopStandard}"
      Text="Duplicates are automatically skipped and scanning continues until limit is reached"/>
     </StackPanel>
       </GroupBox>
       
    <!-- Pagination Options -->
      <GroupBox Header="Pagination" Style="{StaticResource StandardGroupBox}">
                <StackPanel Margin="{StaticResource PaddingStandard}">
  <Grid>
      <Grid.ColumnDefinitions>
   <ColumnDefinition Width="Auto"/>
       <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
           </Grid.ColumnDefinitions>
             
      <TextBlock Grid.Column="0" 
     Style="{StaticResource LabelText}"
     Text="Items per page:"/>
          
   <Slider x:Name="ItemsPerPageSlider"
Grid.Column="1"
   Style="{StaticResource StandardSlider}"
    Minimum="10"
   Maximum="200"
    TickFrequency="10"
         IsSnapToTickEnabled="True"
  Value="50"/>
      
  <TextBlock Grid.Column="2" 
       Text="{Binding ElementName=ItemsPerPageSlider, Path=Value, StringFormat={}{0:N0} items}"
  VerticalAlignment="Center"
    Margin="{StaticResource MarginRightStandard}"
      Width="80"/>
             </Grid>
     
       <TextBlock Style="{StaticResource HelpText}"
   Margin="{StaticResource MarginTopStandard}"
  Text="Controls how many images are shown per page in the list view"/>
             </StackPanel>
     </GroupBox>
     </StackPanel>
   </ScrollViewer>
        
        <!-- Buttons -->
      <StackPanel Grid.Row="2" 
      Orientation="Horizontal" 
        HorizontalAlignment="Right">
          <Button x:Name="OkButton" 
            Style="{StaticResource StandardButton}"
  Content="OK" 
   Margin="{StaticResource MarginRightStandard}"
       IsDefault="True"
  Click="OkButton_Click"/>
    <Button x:Name="CancelButton" 
               Style="{StaticResource StandardButton}"
   Content="Cancel" 
              IsCancel="True"
   Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
