<Window x:Class="WebsiteImagePilfer.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WebsiteImagePilfer"
     mc:Ignorable="d"
  Title="Settings" Height="450" Width="450" MinHeight="400" MinWidth="400"
  WindowStartupLocation="CenterOwner"
      ResizeMode="CanResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
  <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
 Text="Download Settings" 
            FontSize="16" 
        FontWeight="Bold" 
        Margin="0,0,0,15"/>

  <!-- Add ScrollViewer to make content scrollable -->
        <ScrollViewer Grid.Row="1" 
       VerticalScrollBarVisibility="Auto"
  Margin="0,0,0,15">
            <StackPanel>
         <!-- Filter by Size -->
 <GroupBox Header="Image Filtering" Margin="0,0,0,10">
      <StackPanel Margin="10">
        <CheckBox x:Name="FilterBySizeCheckBox" 
       Content="Filter images by minimum size"
      Margin="0,0,0,10"/>
     
 <Grid IsEnabled="{Binding ElementName=FilterBySizeCheckBox, Path=IsChecked}">
      <Grid.ColumnDefinitions>
    <ColumnDefinition Width="Auto"/>
       <ColumnDefinition Width="*"/>
 <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>
       
    <TextBlock Grid.Column="0" 
 Text="Minimum size:" 
        VerticalAlignment="Center"
    Margin="0,0,10,0"/>
   
             <Slider x:Name="MinSizeSlider"
       Grid.Column="1"
Minimum="1000"
    Maximum="100000"
           TickFrequency="1000"
     IsSnapToTickEnabled="True"
      Value="5000"
    VerticalAlignment="Center"/>
         
   <TextBlock Grid.Column="2" 
     Text="{Binding ElementName=MinSizeSlider, Path=Value, StringFormat={}{0:N0} bytes}"
         VerticalAlignment="Center"
    Margin="10,0,0,0"
            Width="80"/>
    </Grid>
  </StackPanel>
 </GroupBox>

          <!-- Display Options -->
          <GroupBox Header="Display Options" Margin="0,0,0,10">
  <StackPanel Margin="10">
           <CheckBox x:Name="ShowThumbnailsCheckBox" 
         Content="Show thumbnail previews in list"
          Margin="0,0,0,5"/>
     </StackPanel>
          </GroupBox>

    <!-- File Type Filters -->
  <GroupBox Header="File Type Filters (Optional)" Margin="0,0,0,10">
     <StackPanel Margin="10">
<CheckBox x:Name="FilterJpgCheckBox" 
      Content="Download JPG/JPEG only"
    Margin="0,0,0,5"/>
<CheckBox x:Name="FilterPngCheckBox" 
    Content="Download PNG only"
Margin="0,0,0,5"/>
      <TextBlock Text="Note: Leave both unchecked to download all image types"
       FontSize="10"
FontStyle="Italic"
      Foreground="Gray"
    Margin="0,5,0,0"
 TextWrapping="Wrap"/>
   </StackPanel>
    </GroupBox>

      <!-- Full Resolution Options -->
     <GroupBox Header="Full Resolution Detection" Margin="0,0,0,10">
          <StackPanel Margin="10">
            <CheckBox x:Name="SkipFullResCheckBox" 
         Content="Skip full-resolution check (faster, download previews only)"
     Margin="0,0,0,5"/>
        <TextBlock Text="When unchecked: App will try to find and download full-resolution images instead of previews/thumbnails"
          FontSize="10"
   FontStyle="Italic"
 Foreground="Gray"
   Margin="0,5,0,0"
           TextWrapping="Wrap"/>
             </StackPanel>
          </GroupBox>
    </StackPanel>
 </ScrollViewer>

      <!-- Buttons -->
        <StackPanel Grid.Row="2" 
     Orientation="Horizontal" 
      HorizontalAlignment="Right">
          <Button x:Name="OkButton" 
           Content="OK" 
        Width="80" 
         Height="30" 
        Margin="0,0,10,0"
        IsDefault="True"
      Click="OkButton_Click"/>
          <Button x:Name="CancelButton" 
   Content="Cancel" 
     Width="80" 
            Height="30"
       IsCancel="True"
         Click="CancelButton_Click"/>
    </StackPanel>
    </Grid>
</Window>
