<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- TextBox Style -->
    <Style x:Key="StandardTextBox" TargetType="TextBox">
        <Setter Property="Height" Value="{StaticResource TextBoxHeightStandard}"/>
     <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="{StaticResource PaddingSmall}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
<Setter Property="BorderThickness" Value="1"/>
        <Style.Triggers>
         <Trigger Property="IsMouseOver" Value="True">
       <Setter Property="BorderBrush" Value="{StaticResource BorderHoverBrush}"/>
            </Trigger>
       <Trigger Property="IsFocused" Value="True">
          <Setter Property="BorderBrush" Value="{StaticResource BorderFocusBrush}"/>
 </Trigger>
   </Style.Triggers>
    </Style>
    
<!-- Small TextBox -->
    <Style x:Key="SmallTextBox" TargetType="TextBox" BasedOn="{StaticResource StandardTextBox}">
        <Setter Property="Height" Value="{StaticResource TextBoxHeightSmall}"/>
        <Setter Property="Padding" Value="6,3,6,3"/>
        <Setter Property="MinHeight" Value="28"/>
    </Style>
 
    <!-- CheckBox Style -->
    <Style x:Key="StandardCheckBox" TargetType="CheckBox">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="{StaticResource MarginCheckBox}"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="MinHeight" Value="20"/>
    </Style>
    
    <!-- Filter CheckBox (for status filters) -->
    <Style x:Key="FilterCheckBox" TargetType="CheckBox">
      <Setter Property="VerticalContentAlignment" Value="Center"/>
   <Setter Property="Margin" Value="{StaticResource MarginFilterItem}"/>
        <Setter Property="Padding" Value="5,4,2,4"/>
        <Setter Property="MinHeight" Value="28"/>
    </Style>
  
  <!-- Simple CheckBox (minimal margins) -->
    <Style x:Key="SimpleCheckBox" TargetType="CheckBox">
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="{StaticResource MarginBottomStandard}"/>
        <Setter Property="Padding" Value="2"/>
        <Setter Property="MinHeight" Value="20"/>
    </Style>
    
    <!-- GroupBox Style -->
    <Style x:Key="StandardGroupBox" TargetType="GroupBox">
        <Setter Property="Margin" Value="{StaticResource MarginBottomStandard}"/>
<Setter Property="Padding" Value="{StaticResource PaddingStandard}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>
    
    <!-- ProgressBar Style -->
    <Style x:Key="StandardProgressBar" TargetType="ProgressBar">
        <Setter Property="Height" Value="{StaticResource ProgressBarHeight}"/>
        <Setter Property="Margin" Value="{StaticResource MarginBottomStandard}"/>
        <Setter Property="Minimum" Value="0"/>
   <Setter Property="Maximum" Value="100"/>
    </Style>
    
    <!-- StatusBar Style -->
    <Style x:Key="StandardStatusBar" TargetType="StatusBar">
        <Setter Property="Height" Value="{StaticResource StatusBarHeight}"/>
    </Style>
    
    <!-- Expander Style -->
    <Style x:Key="StandardExpander" TargetType="Expander">
        <Setter Property="Margin" Value="{StaticResource MarginBottomStandard}"/>
    </Style>
    
    <!-- Border Style for Filter Section -->
    <Style x:Key="FilterBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
   <Setter Property="BorderThickness" Value="1"/>
  <Setter Property="Padding" Value="{StaticResource PaddingLarge}"/>
        <Setter Property="Background" Value="{StaticResource BackgroundAltBrush}"/>
   <Setter Property="MinHeight" Value="60"/>
  </Style>
    
    <!-- ListView Style -->
    <Style x:Key="StandardListView" TargetType="ListView">
        <Setter Property="Margin" Value="{StaticResource MarginBottomStandard}"/>
    </Style>
    
    <!-- Slider Style -->
<Style x:Key="StandardSlider" TargetType="Slider">
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
    
</ResourceDictionary>
